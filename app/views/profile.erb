<h2> My Profile </h2>
<p>Welcome <%= @user.email %> </p>

<table class='profile'>
  <tr>
    <th>Game</th>
    <th>Correct Answers</th>
    <th>Percentage</th>
  </tr>
  <% if @stats && @total %>
  <tfoot class='profile_foot'>
    <tr>
      <td>Totals:</td>
      <td><%= @total[:correct] %> / <%= @total[:total] %></td>
      <td><%= @total[:perc] %>%</td>
    </tr>
  </tfoot>
  <% @stats.each do |stat| %>
    <tr>
      <td><%= stat[:name] %></td>
      <td><%= stat[:correct] %> / <%= stat[:total] %></td>
      <td><%= stat[:perc] %>%</td>
    </tr>
  <% end %>
  
<% end %>

</table>

